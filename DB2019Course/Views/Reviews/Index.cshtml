@model IEnumerable<DB2019Course.Models.Review>

@{
    ViewBag.Title = "Отзывы";
}

<h2>Отзывы</h2>

<p>
    @Html.ActionLink("Добавить", "Create", new { id = ViewBag.Id })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Disser.Work.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disser.Work.Theme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewAuthor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organisation)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Disser.Work.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disser.Work.Theme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organisation)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id, author = item.AuthorPass }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id, author = item.AuthorPass }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id, author = item.AuthorPass })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("К диссертации", "Index","Dissers", new { id = ViewBag.Id }, null)
