        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Issue)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Issue)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CoauthorPass)
        </dt>

        <dd>
                @if (Model.CoauthorPass.HasValue)
                {
                    string s = Model.Leader.Name + " " + Model.Leader.Surname + " " + Model.Leader.Lastname;
                    @Html.ActionLink(s, "Details", "Leaders", new { id = Model.CoauthorPass }, null);
                }
                else
                {
                    string s = "Нет";
                    @s
                }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
