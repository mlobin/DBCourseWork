    @Html.HiddenFor(model => model.AuthorPass)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Work.Name, htmlAttributes: new { @class = "control-label col-md-2" })
