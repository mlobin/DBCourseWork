            @Html.EditorFor(Model=>Model.Work.Theme,"WorkTheme", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Work.Theme, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Work.UDC, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Work.UDC,"WorkUDC", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Work.UDC, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Work.Department, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Work.Department, "WorkDepart", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Work.Department, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Journal, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Journal, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Journal, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
