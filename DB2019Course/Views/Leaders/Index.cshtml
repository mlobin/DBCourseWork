@model IEnumerable<DB2019Course.Models.Leader>

@{
    ViewBag.Title = "Список";
}

<h2>Руководители</h2>

<p>
    @{ if (ViewBag.PassId == null)
        {
            @Html.ActionLink("Добавить ", "Create"); @Html.ActionLink("Поиск", "Find");
        }
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Degree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.PassId }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.PassId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.PassId })
            </td>
        </tr>


    }

</table>
@if (ViewBag.PassId != null)
{
    @Html.ActionLink("К аспиранту", "Details", "Aspirants", new { id = ViewBag.PassId }, null)
}